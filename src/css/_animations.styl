/*
.order-enter -> &.order-enter-active
a -> b
*/

.order-enter
  background red
  transition all 0.5s
  max-height 0
  transform translateX(-120%)
  &.order-enter-active
    background yellow
    max-height 60px
    transform translateX(0)

.order-leave
  transition all 0.5s
  transform translateX(0px)
  &.order-leave-active
    transform translateX(120%)
    max-height 0



.count-enter
  transition all .25s
  transform translateY(100%) // start off screen
  &.count-enter-active
    transform translateY(0) // put it in it's normal resting spot

.count-leave
  transition all .25s
  position absolute
  left 0
  bottom 0
  transform translateY(0) // start it where it is
  &.count-leave-active
    transform translateY(-100%) // start it where it is
